<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="4.0" method="upgrade">

	<name>COM_TABAPAPO</name>
	
	<creationDate>October 2021</creationDate>
	<author>Jonatas C. Ferreira</author>
	<authorEmail>jonatas@tabaoca.org</authorEmail>
	<authorUrl>https://tabaoca.org</authorUrl>
	<copyright>Copyright (C) 2021 Tabaoca. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<creativecommons>Dices D4, D6, D8, D10, D12, D20 by Lonnie Tapscott from the Noun Project</creativecommons>

	<version>0.9.0</version>

	<description>COM_TABAPAPO_DESCRIPTION</description>
	<namespace path="src">Joomla\Component\Tabapapo</namespace>
	<scriptfile>script.php</scriptfile>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>index.html</filename>
		<filename>tabapapo.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>controllers</folder>
	</files>

	<languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_tabapapo.ini</language>
	</languages>

	<media destination="com_tabapapo" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
 		<folder>js</folder>
		<folder>css</folder>
	</media>

	<administration>
		<menu link="class:address-book">COM_TABAPAPO_MENU</menu>
		<submenu>
			<menu link="option=com_tabapapo" img="class:tabapapo"
				alt="Tabapapo/Tabapapos">COM_TABAPAPO_TABAPAPOS</menu>
			<menu link="option=com_categories&amp;extension=com_tabapapo"
				view="categories" img="class:tabapapo-cat" alt="Tabapapos/Categories">COM_TABAPAPO_CATEGORIES</menu>
		</submenu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>tabapapo.php</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>access.xml</filename>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>models</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
		</files>

		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_tabapapo.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_tabapapo.sys.ini</language>
		</languages>

	</administration>
	
  <updateservers>
		<server type="component" name="Tabapapo Updates">https://tabaoca.org/tabapapo-updates/updates.xml</server>
	</updateservers>
  
</extension>